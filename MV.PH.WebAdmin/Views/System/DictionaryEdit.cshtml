
@{
    Layout = null;
}
@using MV.PH.Entity
@model DictionaryEntity
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,member-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />

    <title>Add</title>

    <link href="/lib/css/H-ui.min.css" rel="stylesheet" type="text/css" />
    <link href="/lib/css/H-ui.admin.css" rel="stylesheet" type="text/css" />
    <link href="/lib/icheck/icheck.css" rel="stylesheet" type="text/css" />
    <link href="/lib/Hui-iconfont/1.0.1/iconfont.css" rel="stylesheet" type="text/css" />

    <link href="~/lib/css/amazeui.css" rel="stylesheet" />
</head>
<body>
    <div>
        <form action="" method="post" class="form form-horizontal" id="form1">
            <input type="hidden" id="DictionaryID" name="DictionaryID" value="@Model.DictionaryID" />
            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>字典分类：</label>
                <div class="formControls col-7">
                    <select class="select-box inline" style="min-width:240px" id="DictionaryCategoryID" name="DictionaryCategoryID" datatype="*" nullmsg="请选择字典分类">
                        <option value="">字典分类…</option>
                        @{

                            var list = ViewData["category"] as List<DictionaryCategoryEntity>;

                            foreach (var item in list)
                            {
                                <option value="@item.DictionaryCategoryID" @(Model.DictionaryCategoryID==item.DictionaryCategoryID?"selected":"")>&nbsp; &nbsp;    ├@item.CategoryName</option>

                            }
                        }

                    </select>

                </div>
                <div class="col-3"> </div>
            </div>

            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>字典名称：</label>
                <div class="formControls col-7">
                    <input type="text" class="input-text" value="@Model.DictionaryName" placeholder="字典名称" id="DictionaryName" name="DictionaryName" datatype="*" nullmsg="字典名称不能为空">
                </div>
                <div class="col-3"> </div>
            </div>

            <div class="row cl">
                <label class="form-label col-2">字典值：</label>
                <div class="formControls col-7">
                    <input type="text" class="input-text" value="@Model.DictionaryValue" placeholder="字典值" id="DictionaryValue" name="DictionaryValue">
                </div>
                <div class="col-3"> </div>
            </div>

            <div class="row cl">
                <label class="form-label col-2">描述：</label>
                <div class="formControls col-7">
                    <textarea name="DictionaryDescription" id="DictionaryDescription" class="textarea" placeholder="描述..." onkeyup="textarealength(this, 100)" datatype="*0-100" errormsg="备注字符长度为0-100位">@Model.DictionaryDescription</textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/100</p>
                </div>
                <div class="col-3"> </div>
            </div>

            <div class="row cl">
                <label class="form-label col-2"><span class="c-red">*</span>排序：</label>
                <div class="formControls col-7">
                    <input type="text" class="input-text" value="@Model.SortNumber" placeholder="排序" id="SortNumber" name="SortNumber" datatype="n" nullmsg="排序不能为空" errormsg="请输入数字类型">
                </div>
                <div class="col-3"><span class="Validform_checktip"><font style="font-size:14px;color:#999999;">数字越小越靠前</font></span> </div>
            </div>

            <div class="row cl">
                <label class="form-label col-2"></label>
                <div class="formControls col-7">
                    <input class="btn btn-primary radius" type="button" id="Add" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">&nbsp;&nbsp;
                    <input class="btn btn-primary radius reset" type="button" onclick="CloseArt()" value="&nbsp;关闭&nbsp;">
                </div>
            </div>

        </form>
    </div>
     <script src="/lib/jquery-1.10.2.js"></script>
    
    <script type="text/javascript" src="/lib/Validform/5.3.2/Validform.js"></script>
    <script type="text/javascript" src="/lib/Validform/5.3.2/passwordStrength-min.js"></script>
    <script type="text/javascript" src="/lib/layer/1.9.3/layer.js"></script>
    <script type="text/javascript" src="/lib/js/H-ui.js"></script>
    <script type="text/javascript" src="/lib/js/H-ui.admin.js"></script>
    <script src="~/lib/jquery.form.js"></script>
    <script src="~/lib/artDialog/dialog_plus_min.js"></script>
    <script type="text/javascript" src="/lib/js/Common.js"></script>
    <script type="text/javascript">
        $(function () {
            //用户添加及表单验证
            var demo = $("#form1").Validform({
                tiptype: 2,
                btnSubmit: "#Add",
                //btnReset: "reset",
                callback: function () {
                    $('#form1').ajaxSubmit({
                        type: "post",
                        url: "/System/DictionaryEdit",
                        dataType: "json",
                        timeout: 20000,
                        success: function (r) {

                            if (r.status == "y") {
                                layer.msg(r.info, { icon: 1, time: 2000 }, function () {
                                    var list = top.dialog.list;
                                    for (var i in list) {
                                        list[i].close();
                                    };
                                });

                            }
                            else {

                                layer.msg(r.info, { icon: 2, time: 2000 }, function () {
                                    var list = top.dialog.list;
                                    for (var i in list) {
                                        list[i].close();
                                    };
                                });
                            }

                        }
                    });

                    return false;

                }
            });

        });
    </script>
</body>
</html>
