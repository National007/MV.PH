            //用户添加及表单验证
            var demo = $("#form-admin-add").Validform({
                tiptype: 2,
                btnSubmit: "#Add",
                usePlugin: {
                    passwordstrength: {
                        minLen: 6,
                        maxLen: 18
                    }
                },
                datatype: {
                    //"zh1-6": /^[\u4E00-\u9FA5\uf900-\ufa2d]{1,6}$/,
                    "account": function (gets, obj, curform, regxp) {
                        var reg = /^[a-zA-Z][a-zA-Z0-9]{1,15}$/;
                        if (!reg.test(gets)) {
                            return "以字母开头,由英文字母和数字组成的2-16位字符,";
                        }

                    }
                },
                callback: function () {
                    $.ajax({
