                        dataType: "json",
                        timeout: 20000,
                        success: function (r) {

                            if (r.status == "y") {
                                layer.msg(r.info, { icon: 1, time: 2000 }, function () {
                                    //var index = parent.layer.getFrameIndex(window.name);
                                    //parent.layer.close(index);
                                    var list = top.dialog.list;
                                    for (var i in list) {
                                        list[i].close();
                                    };

                                });

                            }
                            else {

                                layer.msg(r.info, { icon: 2, time: 2000 }, function () {
                                    var list = top.dialog.list;
                                    for (var i in list) {
                                        list[i].close();
                                    };

                                    //var index = parent.layer.getFrameIndex(window.name);
                                    //parent.layer.close(index);
                                });
                            }

                        }
                    });

